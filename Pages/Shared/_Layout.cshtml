<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - PlantManagement</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/PlantManagement.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" />
    @RenderSection("Styles", required: false)

</head>

<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-header d-flex align-items-center justify-content-between">

                <!-- Logo + tên -->
                <a class="navbar-brand d-flex align-items-center" asp-area="" asp-page="/Index">
                    <i class="bi bi-leaf text-success me-2"></i>
                    <span class="fw-bold">Tra Cứu Cây Trồng</span>
                </a>

                <!-- Menu -->
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav ms-auto">
                    @if (User.IsInRole("Admin")) {
                        <li class="nav-item">
                        <div class="add-plant">
                            
                            <a class="nav-link text-white" asp-page="/Admin/Create"><i class="bi bi-plus me-2"></i>Thêm cây</a>
                        </div>
                            
                        </li>
                         <li class="nav-item">
                            <a class="nav-link text-dark" asp-page="/Index">Trang chủ</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-page="/Admin/Report">Báo cáo</a>
                        </li>
                        
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-page="/Admin/Index">Quản trị</a>
                        </li>
                    } else {
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-page="/Index">Trang chủ</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-page="/Categories/Index">Danh mục</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-page="/About">Về chúng tôi</a>
                        </li>

                    }
                        
                    </ul>

                    <!-- Thêm ms-auto ở đây để đẩy qua phải -->
                    <ul class="navbar-nav">
                        @if (User.Identity != null && User.Identity.IsAuthenticated)
                        {
                            // Kiểm tra vai trò
                            @if (User.IsInRole("Admin"))
                            {
                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle d-flex align-items-center" href="#" id="adminDropdown"
                                        role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                        <i class="bi bi-person me-1"></i> @User.Identity.Name
                                    </a>
                                    <ul class="dropdown-menu dropdown-menu-end shadow" aria-labelledby="adminDropdown">
                                        <li><a class="dropdown-item d-flex align-items-center" href="#"><i
                                                    class="bi bi-person me-2"></i> Quản lý người dùng</a></li>
                                        <li><a class="dropdown-item d-flex align-items-center" href="#"><i
                                                    class="bi bi-gear me-2"></i> Cài đặt hệ thống</a></li>
                                        <li>
                                            <hr class="dropdown-divider">
                                        </li>
                                        <form method="post" asp-page="/Auth/Authentication" asp-page-handler="Logout"
                                            class="dropdown-item p-0">
                                            <button type="submit" class="btn btn-link dropdown-item d-flex align-items-center">
                                                <i class="bi bi-box-arrow-right me-2"></i> Đăng xuất
                                            </button>
                                        </form>
                                    </ul>
                                </li>
                            }
                            else
                            {
                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle d-flex align-items-center" href="#" id="userDropdown"
                                        role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                        <i class="bi bi-person me-1"></i> @User.Identity.Name
                                    </a>
                                    <ul class="dropdown-menu dropdown-menu-end shadow" aria-labelledby="userDropdown">
                                        <li><a class="dropdown-item d-flex align-items-center" href="#"><i
                                                    class="bi bi-person me-2"></i> Thông tin cá nhân</a></li>
                                        <li><a class="dropdown-item d-flex align-items-center" href="#"><i
                                                    class="bi bi-heart me-2"></i> Cây yêu thích</a></li>
                                        <li>
                                            <hr class="dropdown-divider">
                                        </li>
                                        <form method="post" asp-page="/Auth/Authentication" asp-page-handler="Logout"
                                            class="dropdown-item p-0">
                                            <button type="submit" class="btn btn-link dropdown-item d-flex align-items-center">
                                                <i class="bi bi-box-arrow-right me-2"></i> Đăng xuất
                                            </button>
                                        </form>
                                    </ul>
                                </li>
                            }
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link" href="/Auth/Authentication">Login</a>
                            </li>
                        }
                    </ul>

                </div>

            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - PlantInformation - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>
    <div class="position-fixed top-0 end-0 p-3" style="z-index: 1100">
        <div id="globalToast" class="toast text-bg-primary border-0" role="alert" aria-live="assertive"
            aria-atomic="true">
            <div class="d-flex">
                <div id="toastMessage" class="toast-body"></div>
                <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast"></button>
            </div>
        </div>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script>
        function showToast(message, type = "info") {
            const toastEl = document.getElementById("globalToast");
            const toastBody = document.getElementById("toastMessage");

            toastEl.className = "toast border-0 text-bg-" + type;
            toastBody.innerText = message;

            const toast = new bootstrap.Toast(toastEl);
            toast.show();
        }

        @if (TempData["ToastMessage"] != null)
            {
                <text>
                    document.addEventListener("DOMContentLoaded", function () {
                        showToast("@Html.Raw(TempData["ToastMessage"])", "@TempData["ToastType"]");
                                });
                </text>
        }
    </script>

    @await RenderSectionAsync(name: "Scripts", required: false)
</body>


</html>