    <script>
        function showToast(message, type = "info") {
            const toastEl = document.getElementById("globalToast");
            const toastBody = document.getElementById("toastMessage");

            toastEl.className = "toast border-0 text-bg-" + type;
            toastBody.innerText = message;

            const toast = new bootstrap.Toast(toastEl);
            toast.show();
        }

        @if (TempData["ToastMessage"] != null)
            {
                <text>
                            console.log('Toast Type:', "@TempData["ToastType"]");

                    document.addEventListener("DOMContentLoaded", function () {
                        showToast("@Html.Raw(TempData["ToastMessage"])", "@TempData["ToastType"]");
                                });
                </text>
        }
    </script>
    <script>
document.getElementById("btnSavePersonalInfo").addEventListener("click", async () => {
    const data = {
        userId: document.getElementById("UserId").value,
        email: document.getElementById("Email").value,
        password: document.getElementById("Password").value
    };

    const response = await fetch('/api/users/update', { // endpoint thực tế
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify(data)
    });

    const result = await response.json();
    if (result.success) {
        showToast(result.message, "success");
        bootstrap.Modal.getInstance(document.getElementById("personalInfoModal")).hide();
    } else {
        showToast(result.message || "Cập nhật thất bại!", "danger");
    }
});

function showToast(message, type) {
    const toast = document.createElement("div");
    toast.className = `toast align-items-center text-white bg-${type} border-0 position-fixed top-0 end-0 m-3 show`;
    toast.innerHTML = `<div class="d-flex"><div class="toast-body">${message}</div>
                       <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast"></button></div>`;
    document.body.appendChild(toast);
    setTimeout(() => toast.remove(), 3000);
}
</script>


