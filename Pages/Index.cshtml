    <script>
        $(document).ready(function () {
            // Initialize favorites from memory
            var favorites = {};

            // Smooth scrolling for anchor links
            $('a[href^="#"]').on('click', function (e) {
                e.preventDefault();
                var target = $(this.getAttribute('href'));
                if (target.length) {
                    $('html, body').stop().animate({
                        scrollTop: target.offset().top - 100
                    }, 800);
                }
            });

            // Filter form handling
            $('#keyword, #category, #order').on('change', function () {
                filterPlants();
            });

            // Reset button
            $('#resetBtn').on('click', function () {
                $('#keyword').val('');
                $('#category').val('');
                $('#order').val('');
                filterPlants();
            });

            function filterPlants() {
                $('#loadingOverlay').addClass('show');

                // Simulate AJAX call
                setTimeout(function () {
                    $('#loadingOverlay').removeClass('show');

                    $('html, body').animate({
                        scrollTop: $('#plantsGrid').offset().top - 150
                    }, 500);
                }, 500);
            }

            // Favorite button functionality
            $('.favorite-btn').on('click', function (e) {
                e.preventDefault();
                var btn = $(this);
                var plantId = btn.data('id');

                // Toggle favorite status
                if (favorites[plantId]) {
                    delete favorites[plantId];
                    btn.removeClass('active');
                } else {
                    favorites[plantId] = true;
                    btn.addClass('active');
                }

                // Store in memory (in real app, would save to backend)
                console.log('Favorites:', favorites);
            });

            // Add hover effect to cards
            $('.plant-card').hover(
                function () {
                    $(this).addClass('shadow-lg');
                },
                function () {
                    $(this).removeClass('shadow-lg');
                }
            );
        });
    </script>
