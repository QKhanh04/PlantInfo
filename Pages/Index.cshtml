@page
@model IndexModel
@{
    ViewData["Title"] = "Trang chủ - Tra cứu cây trồng";
}

<!DOCTYPE html>
<html lang="vi">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Khám Phá Cây Trồng - Plants</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-icons/1.11.0/font/bootstrap-icons.min.css"
        rel="stylesheet">
    <style>
        :root {
            --primary-green: #2d5016;
            --light-green: #4a7c59;
            --accent-green: #7fb069;
            --soft-green: #f0f7ed;
            --warm-white: #fafafa;
            --text-dark: #2c3e50;
            --text-muted: #6c757d;
            --shadow-light: rgba(0, 0, 0, 0.08);
            --shadow-medium: rgba(0, 0, 0, 0.15);
            --border-radius: 16px;
            --transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
            --gradient-bg: linear-gradient(135deg, #f8fffe 0%, #e8f5e8 50%, #f0f7ed 100%);
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background: var(--gradient-bg);
        }

        /* Hero Section */
        .hero-section {
            height: 95vh;
            width: 100%;
            background: linear-gradient(rgba(0, 0, 0, 0.4), rgba(0, 0, 0, 0.4)),
                url('https://images.unsplash.com/photo-1466692476868-aef1dfb1e735?w=1600') center/cover;
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            text-align: left;
        }

        .hero-content {
            width: 100%;
            max-width: 100%;
            padding: 0 15px;
        }

        .hero-subtitle {
            font-size: 18px;
            margin-bottom: 15px;
            font-weight: 300;
        }

        .hero-title {
            font-size: 56px;
            font-weight: 300;
            line-height: 1.3;
            margin-bottom: 25px;
        }

        .hero-description {
            font-size: 16px;
            line-height: 1.8;
            margin-bottom: 35px;
            max-width: 700px;
        }

        .hero-btn {
            background-color: var(--accent-green);
            color: white;
            padding: 15px 50px;
            border: none;
            font-size: 16px;
            cursor: pointer;
            text-decoration: none;
            display: inline-block;
            transition: var(--transition);
            border-radius: var(--border-radius);
        }

        .hero-btn:hover {
            background-color: var(--light-green);
            color: white;
            transform: translateY(-3px);
            box-shadow: 0 6px 20px rgba(127, 176, 105, 0.4);
        }

        /* About Section */
        .about-section {
            background-color: var(--soft-green);
            padding: 100px 100px;
            margin-bottom: 80px;
        }

        .about-title {
            font-size: 42px;
            font-weight: 300;
            margin-bottom: 30px;
            color: var(--text-dark);
        }

        .about-text {
            font-size: 16px;
            line-height: 1.8;
            color: var(--text-muted);
            margin-bottom: 20px;
        }

        .about-images {
            position: relative;
            height: 500px;
        }

        .about-image-main {
            position: absolute;
            width: 65%;
            height: 70%;
            top: 0;
            left: 0;
            border-radius: var(--border-radius);
            overflow: hidden;
            box-shadow: 0 10px 40px var(--shadow-medium);
        }

        .about-image-main img {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

        .about-image-secondary {
            position: absolute;
            width: 55%;
            height: 60%;
            bottom: 0;
            right: 0;
            border-radius: var(--border-radius);
            overflow: hidden;
            box-shadow: 0 10px 40px var(--shadow-medium);
        }

        .about-image-secondary img {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

        /* Features Section */
        .features-section {
            padding: 80px 0;
            background: white;
        }

        .section-title {
            font-size: 42px;
            font-weight: 300;
            text-align: center;
            margin-bottom: 60px;
            color: var(--text-dark);
        }

        .feature-card {
            background: white;
            border-radius: var(--border-radius);
            padding: 40px 30px;
            text-align: center;
            transition: var(--transition);
            border: 2px solid var(--soft-green);
            height: 100%;
        }

        .feature-card:hover {
            transform: translateY(-10px);
            box-shadow: 0 15px 40px var(--shadow-light);
            border-color: var(--accent-green);
        }

        .feature-icon {
            width: 80px;
            height: 80px;
            background: linear-gradient(135deg, var(--accent-green), var(--light-green));
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0 auto 25px;
            transition: var(--transition);
        }

        .feature-card:hover .feature-icon {
            transform: scale(1.1) rotate(5deg);
        }

        .feature-icon i {
            font-size: 36px;
            color: white;
        }

        .feature-title {
            font-size: 22px;
            font-weight: 500;
            margin-bottom: 15px;
            color: var(--text-dark);
        }

        .feature-description {
            font-size: 15px;
            line-height: 1.7;
            color: var(--text-muted);
        }

        /* Stats Section */
        .stats-section {
            padding: 80px 0;
            background: linear-gradient(135deg, var(--primary-green) 0%, var(--light-green) 100%);
            color: white;
        }

        .stat-item {
            text-align: center;
            padding: 20px;
        }

        .stat-number {
            font-size: 48px;
            font-weight: 600;
            margin-bottom: 10px;
            display: block;
        }

        .stat-label {
            font-size: 16px;
            font-weight: 300;
            opacity: 0.9;
        }

        /* CTA Section */
        .cta-section {
            padding: 100px 0;
            background: var(--soft-green);
            text-align: center;
        }

        .cta-title {
            font-size: 42px;
            font-weight: 300;
            margin-bottom: 20px;
            color: var(--text-dark);
        }

        .cta-description {
            font-size: 18px;
            color: var(--text-muted);
            margin-bottom: 40px;
            max-width: 600px;
            margin-left: auto;
            margin-right: auto;
        }

        .cta-buttons {
            display: flex;
            gap: 20px;
            justify-content: center;
            flex-wrap: wrap;
        }

        .cta-btn-primary {
            background-color: var(--accent-green);
            color: white;
            padding: 15px 40px;
            border: none;
            font-size: 16px;
            border-radius: var(--border-radius);
            text-decoration: none;
            display: inline-flex;
            align-items: center;
            gap: 10px;
            transition: var(--transition);
        }

        .cta-btn-primary:hover {
            background-color: var(--light-green);
            color: white;
            transform: translateY(-3px);
            box-shadow: 0 6px 20px rgba(127, 176, 105, 0.4);
        }

        .cta-btn-secondary {
            background-color: white;
            color: var(--primary-green);
            padding: 15px 40px;
            border: 2px solid var(--accent-green);
            font-size: 16px;
            border-radius: var(--border-radius);
            text-decoration: none;
            display: inline-flex;
            align-items: center;
            gap: 10px;
            transition: var(--transition);
        }

        .cta-btn-secondary:hover {
            background-color: var(--accent-green);
            color: white;
            transform: translateY(-3px);
            box-shadow: 0 6px 20px rgba(127, 176, 105, 0.4);
        }

        /* Responsive */
        @@media (max-width: 992px) {
            .about-images {
                height: 400px;
                margin-top: 50px;
            }

            .about-section {
                padding: 60px 40px;
            }
        }

        @@media (max-width: 768px) {
            .hero-title {
                font-size: 36px;
            }

            .hero-content {
                padding: 0 20px;
            }

            .about-title,
            .section-title,
            .cta-title {
                font-size: 32px;
            }

            .about-section {
                padding: 60px 20px;
            }

            .stat-number {
                font-size: 36px;
            }

            .cta-buttons {
                flex-direction: column;
                align-items: center;
            }

            .cta-btn-primary,
            .cta-btn-secondary {
                width: 100%;
                max-width: 300px;
                justify-content: center;
            }
        }
    </style>
</head>

<body>
    <!-- Hero Section -->
    <section class="hero-section">
        <div class="hero-content">
            <div class="container-fluid">
                <div class="hero-subtitle">Chào mừng đến với Plants</div>
                <h1 class="hero-title">Khám Phá Thế Giới<br>Cây Trồng Xanh</h1>
                <p class="hero-description">
                    Tìm hiểu về hàng trăm loài cây trồng khác nhau, từ cây ăn quả, cây cảnh đến cây dược liệu.
                    Chúng tôi cung cấp thông tin chi tiết về đặc điểm, cách chăm sóc và lợi ích của từng loại cây.
                </p>
                <a asp-page="/LookUpPlant" class="hero-btn">Khám Phá Ngay</a>
            </div>
        </div>
    </section>

    <!-- About Us Section -->
    <section class="about-section" id="about">
        <div class="container-fluid">
            <div class="row align-items-center">
                <div class="col-lg-5">
                    <h2 class="about-title">Về Chúng Tôi</h2>
                    <p class="about-text">
                        Chúng tôi là đội ngũ đam mê cây trồng và thiên nhiên, cam kết mang đến
                        cho bạn những thông tin chính xác và hữu ích nhất về thế giới thực vật.
                        Với kinh nghiệm nhiều năm trong lĩnh vực nông nghiệp và sinh học thực vật,
                        chúng tôi hiểu rằng mỗi loại cây đều có câu chuyện và giá trị riêng.
                    </p>
                    <p class="about-text">
                        Sứ mệnh của chúng tôi là giúp mọi người kết nối với thiên nhiên,
                        hiểu biết và yêu thích cây trồng hơn. Từ những người mới bắt đầu
                        đến các nhà làm vườn chuyên nghiệp, chúng tôi cung cấp kiến thức
                        phù hợp cho mọi cấp độ.
                    </p>
                </div>
                <div class="col-lg-7">
                    <div class="about-images">
                        <div class="about-image-main">
                            <img src="https://images.unsplash.com/photo-1466692476868-aef1dfb1e735?w=600" alt="Forest">
                        </div>
                        <div class="about-image-secondary">
                            <img src="https://images.unsplash.com/photo-1542601906990-b4d3fb778b09?w=400"
                                alt="Sunlight through trees">
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Features Section -->
    <section class="features-section">
        <div class="container-fluid">
            <h2 class="section-title">Tính Năng Nổi Bật</h2>
            <div class="row g-4">
                <div class="col-lg-3 col-md-6">
                    <div class="feature-card">
                        <div class="feature-icon">
                            <i class="bi bi-search"></i>
                        </div>
                        <h3 class="feature-title">Tra Cứu Nhanh</h3>
                        <p class="feature-description">
                            Tìm kiếm thông tin cây trồng dễ dàng với bộ lọc thông minh và kết quả chính xác
                        </p>
                    </div>
                </div>
                <div class="col-lg-3 col-md-6">
                    <div class="feature-card">
                        <div class="feature-icon">
                            <i class="bi bi-book"></i>
                        </div>
                        <h3 class="feature-title">Kiến Thức Chi Tiết</h3>
                        <p class="feature-description">
                            Thông tin đầy đủ về đặc điểm, công dụng, và cách chăm sóc từng loại cây
                        </p>
                    </div>
                </div>
                <div class="col-lg-3 col-md-6">
                    <div class="feature-card">
                        <div class="feature-icon">
                            <i class="bi bi-image"></i>
                        </div>
                        <h3 class="feature-title">Hình Ảnh Sống Động</h3>
                        <p class="feature-description">
                            Thư viện ảnh phong phú giúp bạn nhận biết và phân biệt các loại cây trồng
                        </p>
                    </div>
                </div>
                <div class="col-lg-3 col-md-6">
                    <div class="feature-card">
                        <div class="feature-icon">
                            <i class="bi bi-heart"></i>
                        </div>
                        <h3 class="feature-title">Lưu Yêu Thích</h3>
                        <p class="feature-description">
                            Lưu lại các cây yêu thích để dễ dàng theo dõi và quản lý danh sách của bạn
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Stats Section -->
    <section class="stats-section">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-3 col-md-6">
                    <div class="stat-item">
                        <span class="stat-number">500+</span>
                        <span class="stat-label">Loài Cây Trồng</span>
                    </div>
                </div>
                <div class="col-lg-3 col-md-6">
                    <div class="stat-item">
                        <span class="stat-number">50+</span>
                        <span class="stat-label">Danh Mục</span>
                    </div>
                </div>
                <div class="col-lg-3 col-md-6">
                    <div class="stat-item">
                        <span class="stat-number">1000+</span>
                        <span class="stat-label">Hình Ảnh</span>
                    </div>
                </div>
                <div class="col-lg-3 col-md-6">
                    <div class="stat-item">
                        <span class="stat-number">10k+</span>
                        <span class="stat-label">Người Dùng</span>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- CTA Section -->
    <section class="cta-section">
        <div class="container-fluid">
            <h2 class="cta-title">Sẵn Sàng Khám Phá?</h2>
            <p class="cta-description">
                Bắt đầu hành trình tìm hiểu về thế giới cây trồng ngay hôm nay.
                Hàng trăm loài cây đang chờ bạn khám phá!
            </p>
            <div class="cta-buttons">
                <a asp-page="/LookUpPlant" class="cta-btn-primary">
                    <i class="bi bi-search"></i>
                    Tra Cứu Ngay
                </a>
                <a asp-page="/About" class="cta-btn-secondary">
                    <i class="bi bi-info-circle"></i>
                    Tìm Hiểu Thêm
                </a>
            </div>
        </div>
    </section>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
</body>

</html>