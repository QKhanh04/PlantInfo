@page
@model IndexModel
@{
    ViewData["Title"] = "Tra cứu cây trồng";
}
 
<!DOCTYPE html>
<html lang="vi">
 
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Khám Phá Cây Trồng - Plants</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-icons/1.11.0/font/bootstrap-icons.min.css"
        rel="stylesheet">
    <style>
        :root {
            --primary-green: #2d5016;
            --light-green: #4a7c59;
            --accent-green: #7fb069;
            --soft-green: #f0f7ed;
            --warm-white: #fafafa;
            --text-dark: #2c3e50;
            --text-muted: #6c757d;
            --shadow-light: rgba(0, 0, 0, 0.08);
            --shadow-medium: rgba(0, 0, 0, 0.15);
            --border-radius: 16px;
            --transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
            --gradient-bg: linear-gradient(135deg, #f8fffe 0%, #e8f5e8 50%, #f0f7ed 100%);
        }
 
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }
 
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background: var(--gradient-bg);
        }
 
        /* Hero Section */
        .hero-section {
            height: 90vh;
            width: 100%;
            background: linear-gradient(rgba(0, 0, 0, 0.4), rgba(0, 0, 0, 0.4)),
                url('https://images.unsplash.com/photo-1466692476868-aef1dfb1e735?w=1600') center/cover;
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            text-align: left;
        }
 
        .hero-content {
            width: 100%;
            max-width: 100%;
            padding: 0 15px;
        }
 
        .hero-subtitle {
            font-size: 18px;
            margin-bottom: 15px;
            font-weight: 300;
        }
 
        .hero-title {
            font-size: 56px;
            font-weight: 300;
            line-height: 1.3;
            margin-bottom: 25px;
        }
 
        .hero-description {
            font-size: 16px;
            line-height: 1.8;
            margin-bottom: 35px;
            max-width: 700px;
        }
 
        .hero-btn {
            background-color: var(--accent-green);
            color: white;
            padding: 15px 50px;
            border: none;
            font-size: 16px;
            cursor: pointer;
            text-decoration: none;
            display: inline-block;
            transition: var(--transition);
            border-radius: var(--border-radius);
        }
 
        .hero-btn:hover {
            background-color: var(--light-green);
            color: white;
            transform: translateY(-3px);
            box-shadow: 0 6px 20px rgba(127, 176, 105, 0.4);
        }
 
        /* About Section */
        .about-section {
            background-color: var(--soft-green);
            padding: 100px 100px;
            margin-bottom: 80px;
        }
 
        .about-title {
            font-size: 42px;
            font-weight: 300;
            margin-bottom: 30px;
            color: var(--text-dark);
        }
 
        .about-text {
            font-size: 16px;
            line-height: 1.8;
            color: var(--text-muted);
            margin-bottom: 20px;
        }
 
        .about-images {
            position: relative;
            height: 500px;
        }
 
        .about-image-main {
            position: absolute;
            width: 65%;
            height: 70%;
            top: 0;
            left: 0;
            border-radius: var(--border-radius);
            overflow: hidden;
            box-shadow: 0 10px 40px var(--shadow-medium);
        }
 
        .about-image-main img {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }
 
        .about-image-secondary {
            position: absolute;
            width: 55%;
            height: 60%;
            bottom: 0;
            right: 0;
            border-radius: var(--border-radius);
            overflow: hidden;
            box-shadow: 0 10px 40px var(--shadow-medium);
        }
 
        .about-image-secondary img {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }
 
        /* Filter & Plants Section */
        .plants-section {
            padding: 60px 0 80px;
        }
 
        .section-title {
            font-size: 42px;
            font-weight: 300;
            text-align: center;
            margin-bottom: 50px;
            color: var(--text-dark);
        }
 
        /* Sidebar Filter */
        .filter-sidebar {
            background-color: white;
            border-radius: var(--border-radius);
            padding: 30px;
            box-shadow: 0 5px 20px var(--shadow-light);
            position: sticky;
            top: 80px;
            height: fit-content;
        }
 
        .filter-sidebar h3 {
            font-size: 24px;
            margin-bottom: 25px;
            font-weight: 400;
            color: var(--text-dark);
        }
 
        .filter-group {
            margin-bottom: 25px;
        }
 
        .filter-group label {
            display: block;
            font-size: 14px;
            font-weight: 500;
            color: var(--text-muted);
            margin-bottom: 8px;
        }
 
        .checkbox-group {
            max-height: 200px;
            overflow-y: auto;
            padding: 10px;
            background-color: var(--soft-green);
            border-radius: 8px;
            border: 1px solid #e0e0e0;
        }
 
        .checkbox-group::-webkit-scrollbar {
            width: 6px;
        }
 
        .checkbox-group::-webkit-scrollbar-track {
            background: #f1f1f1;
            border-radius: 10px;
        }
 
        .checkbox-group::-webkit-scrollbar-thumb {
            background: var(--accent-green);
            border-radius: 10px;
        }
 
        .form-check {
            margin-bottom: 10px;
        }
 
        .form-check-input {
            border: 2px solid var(--accent-green);
            cursor: pointer;
        }
 
        .form-check-input:checked {
            background-color: var(--accent-green);
            border-color: var(--accent-green);
        }
 
        .form-check-input:focus {
            border-color: var(--accent-green);
            box-shadow: 0 0 0 3px rgba(127, 176, 105, 0.1);
        }
 
        .form-check-label {
            font-size: 14px;
            color: var(--text-dark);
            cursor: pointer;
            user-select: none;
        }
 
        .form-control,
        .form-select {
            border-radius: 8px;
            border: 1px solid #e0e0e0;
            padding: 12px 15px;
            font-size: 15px;
            transition: var(--transition);
            width: 100%;
        }
 
        .form-control:focus,
        .form-select:focus {
            border-color: var(--accent-green);
            box-shadow: 0 0 0 3px rgba(127, 176, 105, 0.1);
        }
 
        .btn-filter {
            background-color: var(--accent-green);
            color: white;
            border: none;
            padding: 12px 30px;
            border-radius: 8px;
            font-size: 15px;
            transition: var(--transition);
            width: 100%;
            margin-bottom: 10px;
        }
 
        .btn-filter:hover {
            background-color: var(--light-green);
            transform: translateY(-2px);
            box-shadow: 0 4px 12px rgba(127, 176, 105, 0.3);
        }
 
        .btn-reset {
            background-color: var(--text-muted);
            color: white;
            border: none;
            padding: 12px 30px;
            border-radius: 8px;
            font-size: 15px;
            transition: var(--transition);
            width: 100%;
        }
 
        .btn-reset:hover {
            background-color: #5a6268;
            transform: translateY(-2px);
            box-shadow: 0 4px 12px rgba(108, 117, 125, 0.3);
        }
 
        /* Mobile Filter Toggle */
        .filter-toggle-btn {
            display: none;
            background-color: var(--accent-green);
            color: white;
            border: none;
            padding: 12px 25px;
            border-radius: 8px;
            font-size: 15px;
            margin-bottom: 20px;
            width: 100%;
        }
 
        /* Plant Cards */
        .plant-card {
            background: white;
            border-radius: var(--border-radius);
            overflow: hidden;
            transition: var(--transition);
            border: none;
            box-shadow: 0 4px 20px var(--shadow-light);
            height: 100%;
        }
 
        .plant-card:hover {
            transform: translateY(-8px);
            box-shadow: 0 8px 35px rgba(127, 176, 105, 0.2);
        }
 
        .plant-image {
            height: 250px;
            overflow: hidden;
            background-color: #f0f0f0;
            position: relative;
        }
 
        .favorite-btn {
            position: absolute;
            top: 15px;
            right: 15px;
            width: 45px;
            height: 45px;
            border-radius: 50%;
            background-color: white;
            border: none;
            cursor: pointer;
            display: flex;
            align-items: center;
            justify-content: center;
            box-shadow: 0 3px 10px var(--shadow-medium);
            transition: var(--transition);
            z-index: 10;
        }
 
        .favorite-btn:hover {
            transform: scale(1.1);
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.25);
        }
 
        .favorite-btn i {
            font-size: 20px;
            color: #ccc;
            transition: var(--transition);
        }
 
        .favorite-btn.active i {
            color: #ff4757;
        }
 
        .plant-image img {
            width: 100%;
            height: 100%;
            object-fit: cover;
            transition: transform 0.6s ease;
        }
 
        .plant-card:hover .plant-image img {
            transform: scale(1.08);
        }
 
        .plant-image-placeholder {
            display: flex;
            align-items: center;
            justify-content: center;
            height: 100%;
            background: transparent;
        }
 
        .plant-image-placeholder i {
            font-size: 60px;
            color: rgba(0, 0, 0, 0.2);
        }
 
        .card-body {
            padding: 25px;
        }
 
        .plant-title {
            font-size: 22px;
            font-weight: 400;
            margin-bottom: 10px;
            color: var(--text-dark);
        }
 
        .plant-species {
            font-size: 14px;
            color: var(--accent-green);
            font-style: italic;
            margin-bottom: 15px;
            display: block;
        }
 
        .category-badges {
            display: flex;
            flex-wrap: wrap;
            gap: 8px;
            margin-bottom: 20px;
        }
 
        .category-badge {
            background-color: var(--soft-green);
            color: var(--primary-green);
            padding: 5px 12px;
            font-size: 12px;
            border-radius: 20px;
            border: 1px solid var(--accent-green);
        }
 
        .view-detail-btn {
            background-color: transparent;
            color: var(--accent-green);
            border: 2px solid var(--accent-green);
            padding: 10px 25px;
            width: 100%;
            text-decoration: none;
            display: inline-block;
            text-align: center;
            transition: var(--transition);
            font-size: 14px;
            border-radius: 8px;
        }
 
        .view-detail-btn:hover {
            background-color: var(--accent-green);
            color: white;
            transform: translateY(-2px);
            box-shadow: 0 4px 12px rgba(127, 176, 105, 0.3);
        }
 
        /* Pagination */
        .pagination-wrapper {
            display: flex;
            justify-content: center;
            margin-top: 50px;
        }
 
        .pagination .page-link {
            color: var(--text-dark);
            border: 1px solid #e0e0e0;
            padding: 10px 18px;
            border-radius: 8px;
            margin: 0 5px;
            transition: var(--transition);
        }
 
        .pagination .page-item.active .page-link {
            background-color: var(--accent-green);
            border-color: var(--accent-green);
            color: white;
            box-shadow: 0 3px 10px rgba(127, 176, 105, 0.3);
        }
 
        .pagination .page-link:hover {
            background-color: var(--soft-green);
            color: var(--primary-green);
            border-color: var(--accent-green);
            transform: translateY(-2px);
        }
 
        /* Loading Overlay */
        .loading-overlay {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(255, 255, 255, 0.95);
            display: none;
            align-items: center;
            justify-content: center;
            z-index: 9999;
        }
 
        .loading-overlay.show {
            display: flex;
        }
 
        .loading-spinner {
            width: 60px;
            height: 60px;
            border: 4px solid #f3f3f3;
            border-top: 4px solid var(--accent-green);
            border-radius: 50%;
            animation: spin 1s linear infinite;
        }
 
        @* @keyframes spin {
            0% { transform: rotate(0deg); }
            100% { transform: rotate(360deg); }
        }
 
        /* Responsive */
        @media (max-width: 992px) {
            .about-images {
                height: 400px;
                margin-top: 50px;
            }
 
            .filter-sidebar {
                position: static;
                margin-bottom: 30px;
            }
        }
 
        @media (max-width: 768px) {
            .hero-title {
                font-size: 36px;
            }
 
            .hero-content {
                padding: 0 20px;
            }
 
            .filter-toggle-btn {
                display: block;
            }
 
            .filter-sidebar {
                display: none;
            }
 
            .filter-sidebar.show {
                display: block;
            }
 
            .about-title {
                font-size: 32px;
            }
 
            .section-title {
                font-size: 32px;
            }
        } *@
    </style>
</head>
 
<body>
    <!-- Loading Overlay -->
    <div class="loading-overlay" id="loadingOverlay">
        <div class="loading-spinner"></div>
    </div>
 
    <!-- Hero Section -->
    <section class="hero-section">
        <div class="hero-content">
            <div class="container-fluid">
                <div class="hero-subtitle">Chào mừng đến với Plants</div>
                <h1 class="hero-title">Khám Phá Thế Giới<br>Cây Trồng Xanh</h1>
                <p class="hero-description">
                    Tìm hiểu về hàng trăm loài cây trồng khác nhau, từ cây ăn quả, cây cảnh đến cây dược liệu.
                    Chúng tôi cung cấp thông tin chi tiết về đặc điểm, cách chăm sóc và lợi ích của từng loại cây.
                </p>
                <a href="#explore" class="hero-btn">Khám Phá Ngay</a>
            </div>
        </div>
    </section>
 
    <!-- About Us Section -->
    <section class="about-section" id="about">
        <div class="container-fluid">
            <div class="row align-items-center">
                <div class="col-lg-5">
                    <h2 class="about-title">Về Chúng Tôi</h2>
                    <p class="about-text">
                        Chúng tôi là đội ngũ đam mê cây trồng và thiên nhiên, cam kết mang đến
                        cho bạn những thông tin chính xác và hữu ích nhất về thế giới thực vật.
                        Với kinh nghiệm nhiều năm trong lĩnh vực nông nghiệp và sinh học thực vật,
                        chúng tôi hiểu rằng mỗi loại cây đều có câu chuyện và giá trị riêng.
                    </p>
                    <p class="about-text">
                        Sứ mệnh của chúng tôi là giúp mọi người kết nối với thiên nhiên,
                        hiểu biết và yêu thích cây trồng hơn. Từ những người mới bắt đầu
                        đến các nhà làm vườn chuyên nghiệp, chúng tôi cung cấp kiến thức
                        phù hợp cho mọi cấp độ.
                    </p>
                </div>
                <div class="col-lg-7">
                    <div class="about-images">
                        <div class="about-image-main">
                            <img src="https://images.unsplash.com/photo-1466692476868-aef1dfb1e735?w=600" alt="Forest">
                        </div>
                        <div class="about-image-secondary">
                            <img src="https://images.unsplash.com/photo-1542601906990-b4d3fb778b09?w=400"
                                alt="Sunlight through trees">
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
 
    <!-- Plants Section with Sidebar Filter -->
    <section class="plants-section" id="explore">
        <div class="container-fluid">
            <h2 class="section-title">Bộ Sưu Tập Cây Trồng</h2>
           
            <div class="row">
                <!-- Sidebar Filter -->
                <div class="col-lg-3 col-md-4">
                    <!-- Mobile Filter Toggle -->
                    <button class="filter-toggle-btn" id="filterToggleBtn">
                        <i class="bi bi-funnel me-2"></i>Bộ Lọc Tìm Kiếm
                    </button>
 
                    <div class="filter-sidebar" id="filterSidebar">
                        <h3><i class="bi bi-funnel me-2"></i>Tìm Kiếm</h3>
                        <form id="filter-form">
                            <div class="filter-group">
                                <label for="keyword">Tên cây trồng</label>
                                <input type="text" class="form-control" id="keyword"
                                       placeholder="Nhập tên cây...">
                            </div>
                           
                            <div class="filter-group">
                                <label>Danh mục</label>
                                <div class="checkbox-group">
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" value="1" id="cat1" name="categories">
                                        <label class="form-check-label" for="cat1">Cây ăn quả</label>
                                    </div>
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" value="2" id="cat2" name="categories">
                                        <label class="form-check-label" for="cat2">Cây cảnh</label>
                                    </div>
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" value="3" id="cat3" name="categories">
                                        <label class="form-check-label" for="cat3">Cây dược liệu</label>
                                    </div>
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" value="4" id="cat4" name="categories">
                                        <label class="form-check-label" for="cat4">Cây rau củ</label>
                                    </div>
                                </div>
                            </div>
                           
                            <div class="filter-group">
                                <label>Công dụng</label>
                                <div class="checkbox-group">
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" value="food" id="use1" name="usages">
                                        <label class="form-check-label" for="use1">Ăn quả/Thực phẩm</label>
                                    </div>
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" value="medicine" id="use2" name="usages">
                                        <label class="form-check-label" for="use2">Chữa bệnh</label>
                                    </div>
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" value="decoration" id="use3" name="usages">
                                        <label class="form-check-label" for="use3">Trang trí</label>
                                    </div>
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" value="shade" id="use4" name="usages">
                                        <label class="form-check-label" for="use4">Che bóng mát</label>
                                    </div>
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" value="air" id="use5" name="usages">
                                        <label class="form-check-label" for="use5">Lọc không khí</label>
                                    </div>
                                </div>
                            </div>
                           
                            <div class="filter-group">
                                <label for="order">Bộ</label>
                                <select class="form-select" id="order">
                                    <option value="">Tất cả bộ</option>
                                    <option value="Rosales">Rosales</option>
                                    <option value="Poales">Poales</option>
                                    <option value="Fabales">Fabales</option>
                                </select>
                            </div>
                           
                            <div class="filter-group">
                                <button type="button" class="btn btn-filter" id="applyBtn">
                                    <i class="bi bi-search me-2"></i>Tìm Kiếm
                                </button>
                                <button type="button" class="btn btn-reset" id="resetBtn">
                                    <i class="bi bi-arrow-counterclockwise me-2"></i>Xóa Bộ Lọc
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
 
                <!-- Plants Grid -->
                <div class="col-lg-9 col-md-8">
                    <div class="row g-4" id="plantsGrid">
                        @foreach (DTOs.PlantListDTO plant in Model.Plants.Items)
                        {
                            <div class="col-lg-4 col-md-6 col-sm-6">
                                <div class="plant-card">
                                    <div class="plant-image">
                                        @if (plant.ImageUrls != null && plant.ImageUrls.Any())
                                        {
                                            <img src="@plant.ImageUrls.First()" alt="@plant.CommonName">
                                        }
                                        else
                                        {
                                            <div class="plant-image-placeholder">
                                                <i class="bi bi-image"></i>
                                            </div>
                                        }
                                        <button class="favorite-btn" data-id="@plant.PlantId">
                                            <i class="bi bi-heart-fill"></i>
                                        </button>
                                    </div>
                                    <div class="card-body">
                                        <h5 class="plant-title">@plant.CommonName</h5>
                                        <span class="plant-species">@plant.SpeciesName</span>
                                        <div class="category-badges">
                                            @foreach (var categoryName in plant.CategoryNames)
                                            {
                                                <span class="category-badge">@categoryName</span>
                                            }
                                        </div>
                                        <a asp-page="/Detail" asp-route-id="@plant.PlantId" class="view-detail-btn">
                                            <i class="bi bi-eye"></i> Chi tiết
                                        </a>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
 
                    <!-- Pagination -->
                    @if (Model.TotalPages > 1)
                    {
                        <div class="pagination-wrapper">
                            <nav aria-label="Phân trang">
                                <ul class="pagination mb-0">
                                    <li class="page-item @(Model.CurrentPage <= 1 ? "disabled" : "")">
                                        <a class="page-link"
                                           href="@(Model.CurrentPage > 1
                                               ? Url.Page("/Index", null, new {
                                                   page = Model.CurrentPage - 1,
                                                   keyword = Model.FilterVM?.Keyword,
                                                   categoryId = Model.FilterVM?.CategoryId,
                                                   orderName = Model.FilterVM?.OrderName
                                               }, null)
                                               : "#")">
                                            <i class="bi bi-chevron-left"></i> Trước
                                        </a>
                                    </li>
                                    @{
                                        int start = Math.Max(1, Model.CurrentPage - 2);
                                        int end = Math.Min(Model.TotalPages, Model.CurrentPage + 2);
                                        if (Model.CurrentPage <= 3)
                                        {
                                            start = 1;
                                            end = Math.Min(5, Model.TotalPages);
                                        }
                                        else if (Model.CurrentPage >= Model.TotalPages - 2)
                                        {
                                            end = Model.TotalPages;
                                            start = Math.Max(1, Model.TotalPages - 4);
                                        }
                                    }
                                    @if (start > 1)
                                    {
                                        <li class="page-item">
                                            <a class="page-link"
                                               href="@Url.Page("/Index", null, new {
                                                   page = 1,
                                                   keyword = Model.FilterVM?.Keyword,
                                                   categoryId = Model.FilterVM?.CategoryId,
                                                   orderName = Model.FilterVM?.OrderName
                                               }, null)">
                                                1
                                            </a>
                                        </li>
                                        <li class="page-item disabled"><span class="page-link">...</span></li>
                                    }
                                    @for (int i = start; i <= end; i++)
                                    {
                                        <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                                            <a class="page-link"
                                               href="@Url.Page("/Index", null, new {
                                                   page = i,
                                                   keyword = Model.FilterVM?.Keyword,
                                                   categoryId = Model.FilterVM?.CategoryId,
                                                   orderName = Model.FilterVM?.OrderName
                                               }, null)">
                                                @i
                                            </a>
                                        </li>
                                    }
                                    @if (end < Model.TotalPages)
                                    {
                                        <li class="page-item disabled"><span class="page-link">...</span></li>
                                        <li class="page-item">
                                            <a class="page-link"
                                               href="@Url.Page("/Index", null, new {
                                                   page = Model.TotalPages,
                                                   keyword = Model.FilterVM?.Keyword,
                                                   categoryId = Model.FilterVM?.CategoryId,
                                                   orderName = Model.FilterVM?.OrderName
                                               }, null)">
                                                @Model.TotalPages
                                            </a>
                                        </li>
                                    }
                                    <li class="page-item @(Model.CurrentPage >= Model.TotalPages ? "disabled" : "")">
                                        <a class="page-link"
                                           href="@(Model.CurrentPage < Model.TotalPages
                                               ? Url.Page("/Index", null, new {
                                                   page = Model.CurrentPage + 1,
                                                   keyword = Model.FilterVM?.Keyword,
                                                   categoryId = Model.FilterVM?.CategoryId,
                                                   orderName = Model.FilterVM?.OrderName
                                               }, null)
                                               : "#")">
                                            Sau <i class="bi bi-chevron-right"></i>
                                        </a>
                                    </li>
                                </ul>
                            </nav>
                        </div>
                    }
                </div>
            </div>
        </div>
    </section>
 
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script>
        $(document).ready(function () {
            var favorites = {};
 
            // Mobile filter toggle
            $('#filterToggleBtn').on('click', function () {
                $('#filterSidebar').toggleClass('show');
            });
 
         
 
            // Apply filter button
            $('#applyBtn').on('click', function () {
                filterPlants();
            });
 
            // Reset button
            $('#resetBtn').on('click', function () {
                $('#keyword').val('');
                $('input[name="categories"]').prop('checked', false);
                $('input[name="usages"]').prop('checked', false);
                $('#order').val('');
                filterPlants();
            });
 
            function filterPlants() {
                $('#loadingOverlay').addClass('show');
 
                // Collect selected categories
                var selectedCategories = [];
                $('input[name="categories"]:checked').each(function() {
                    selectedCategories.push($(this).val());
                });
 
                // Collect selected usages
                var selectedUsages = [];
                $('input[name="usages"]:checked').each(function() {
                    selectedUsages.push($(this).val());
                });
 
                var filterData = {
                    keyword: $('#keyword').val(),
                    categories: selectedCategories,
                    usages: selectedUsages,
                    order: $('#order').val()
                };
 
                console.log('Filter data:', filterData);
 
                setTimeout(function () {
                    $('#loadingOverlay').removeClass('show');
                    $('html, body').animate({
                        scrollTop: $('#plantsGrid').offset().top - 150
                    }, 500);
                }, 500);
            }
 
            // Favorite functionality
            $('.favorite-btn').on('click', function (e) {
                e.preventDefault();
                var btn = $(this);
                var plantId = btn.data('id');
 
                if (favorites[plantId]) {
                    delete favorites[plantId];
                    btn.removeClass('active');
                } else {
                    favorites[plantId] = true;
                    btn.addClass('active');
                }
 
                console.log('Favorites:', favorites);
            });
 
            // Card hover effect
            $('.plant-card').hover(
                function () {
                    $(this).addClass('shadow-lg');
                },
                function () {
                    $(this).removeClass('shadow-lg');
                }
            );
        });
    </script>
