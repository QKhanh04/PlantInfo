            if (!chart) {
                alert(`Kh√¥ng t√¨m th·∫•y bi·ªÉu ƒë·ªì: ${chartId}`);
                return;
            }

            const imageBase64 = chart.toDataURL('image/png');
            const formData = new FormData();
            formData.append('chartImage', imageBase64);

            const startDate = new URLSearchParams(window.location.search).get('startDate') || '';
            const endDate = new URLSearchParams(window.location.search).get('endDate') || '';

            try {
                const res = await fetch(`/Admin/Report?handler=${handlerName}&startDate=${startDate}&endDate=${endDate}`, {
                    method: 'POST',
                    body: formData
                });

                if (!res.ok) throw new Error(`Server tr·∫£ v·ªÅ l·ªói ${res.status}`);

                const blob = await res.blob();
                const link = document.createElement('a');
                link.href = URL.createObjectURL(blob);
                link.download = fileName;
                link.click();
            } catch (err) {
                console.error('L·ªói xu·∫•t PDF:', err);
                alert('Kh√¥ng th·ªÉ xu·∫•t PDF. Vui l√≤ng th·ª≠ l·∫°i.');
            }
        }

