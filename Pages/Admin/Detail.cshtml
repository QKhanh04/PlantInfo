@page
@model PlantManagement.Pages.Admin.DetailModel
@{
    ViewData["Title"] = "Chi tiết cây trồng";
}

<div class="container py-4">
    <!-- Back -->
    <a class="text-decoration-none text-dark mb-3 d-inline-flex align-items-center"
       href="javascript:history.back()">
        <i class="bi bi-arrow-left me-2"></i> Quay lại
    </a>

    <!-- Header -->
    <div class="row align-items-center mb-4">
        <div class="col-lg-7">
            <div class="mb-2">
                @foreach (var category in Model.Plants.CategoryNames)
                {
                    <span class="badge bg-success me-1">@category</span>
                }
            </div>
            <h1 class="fw-bold">@Model.Plants.CommonName</h1>
            <div class="fst-italic text-muted mb-3">@Model.Plants.Species?.SpeciesName</div>
            <p class="text-muted">@Model.Plants.Description</p>
            <div class="d-flex flex-wrap gap-3 mt-3 text-muted">
                <div><i class="bi bi-geo-alt me-1"></i>@Model.Plants.Origin</div>
                <div><i class="bi bi-calendar3 me-1"></i>Mùa xuân – Mùa hè</div>
            </div>
        </div>
        <div class="col-lg-5">
            @if (Model.Plants.ImageUrls != null && Model.Plants.ImageUrls.Any())
            {
                <img src="@Model.Plants.ImageUrls.First()" 
                     alt="@Model.Plants.CommonName" 
                     class="img-fluid rounded"
                     style="width:100%; height:420px; object-fit:cover;" />
            }
        </div>
    </div>

    <!-- Stats row -->
    <div class="row g-3 mb-4">
        <div class="col-6 col-md-3">
            <div class="stat-card h-100">
                <i class="bi bi-brightness-high"></i>
                <div class="fw-bold mt-2">Ánh sáng</div>
                <div class="text-muted small mt-1">6-8 giờ/ngày</div>
            </div>
        </div>
        <div class="col-6 col-md-3">
            <div class="stat-card h-100">
                <i class="bi bi-droplet"></i>
                <div class="fw-bold mt-2">Tưới nước</div>
                <div class="text-muted small mt-1">@Model.Plants.GrowthCondition?.WaterRequirement</div>
            </div>
        </div>
        <div class="col-6 col-md-3">
            <div class="stat-card h-100">
                <i class="bi bi-thermometer-half"></i>
                <div class="fw-bold mt-2">Nhiệt độ</div>
                <div class="text-muted small mt-1">@Model.Plants.GrowthCondition?.TemperatureRange</div>
            </div>
        </div>
        <div class="col-6 col-md-3">
            <div class="stat-card h-100">
                <i class="bi bi-calendar-heart"></i>
                <div class="fw-bold mt-2">Tuổi thọ</div>
                <div class="text-muted small mt-1">20-50 năm</div>
            </div>
        </div>
    </div>

    <!-- Basic Info & Growth Condition -->
    <div class="row g-4 mb-4">
        <div class="col-md-6">
            <div class="info-box">
                <div class="section-title">Thông tin cơ bản</div>
                <div class="kv-row">
                    <div class="kv-key">Họ thực vật</div>
                    <div class="text-muted small mt-1">@Model.Plants.Species?.SpeciesFamily</div>
                </div>
                <div class="kv-row">
                    <div class="kv-key">Chi</div>
                    <div class="text-muted small mt-1">@Model.Plants.Species?.SpeciesGenius</div>
                </div>
                <div class="kv-row">
                    <div class="kv-key">Bộ</div>
                    <div class="text-muted small mt-1">@Model.Plants.Species?.SpeciesOrder</div>
                </div>
                <div class="kv-row">
                    <div class="kv-key">Xuất xứ</div>
                    <div class="text-muted small mt-1">@Model.Plants.Origin</div>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="info-box">
                <div class="section-title">Điều kiện sinh trưởng</div>
                <div class="kv-row">
                    <div class="kv-key">Loại đất</div>
                    <div class="text-muted small mt-1">@Model.Plants.GrowthCondition?.SoilType</div>
                </div>
                <div class="kv-row">
                    <div class="kv-key">Ánh sáng</div>
                    <div class="text-muted small mt-1">@Model.Plants.GrowthCondition?.Sunlight</div>
                </div>
                <div class="kv-row">
                    <div class="kv-key">Khí hậu</div>
                    <div class="text-muted small mt-1">@Model.Plants.GrowthCondition?.Climate</div>
                </div>
            </div>
        </div>
    </div>

    <!-- Uses & Propagation -->
    <div class="row g-4 mb-4">
        <div class="col-md-6">
            <div class="info-box">
                <div class="section-title">Công dụng và lợi ích</div>
                <div class="fw-bold mb-2">Công dụng chính</div>
                <div class="mb-3">
                    @foreach (var u in Model.Plants.Uses)
                    {
                        <span class="pill">@u.UseName</span>
                    }
                </div>
                <hr />
                <div>
                    <div class="fw-bold mb-2">Lợi ích môi trường</div>
                    <ul class="mb-0">
                        <li>Cải thiện không khí</li>
                        <li>Giá trị kinh tế</li>
                        <li>Giá trị thẩm mỹ</li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="info-box">
                <div class="section-title">Nhân giống và chăm sóc</div>
                <div class="fw-bold">Phương pháp nhân giống</div>
                <div class="mt-2">
                    <span class="pill">Gieo hạt</span>
                    <span class="pill">Chiết cành</span>
                    <span class="pill">Ghép cây</span>
                </div>
                <hr />
                <div>
                    <div class="fw-bold mb-2">Bệnh thường gặp</div>
                    <ul class="mb-0">
                        @foreach (var d in Model.Plants.Diseases)
                        {
                            <li>@d.DiseaseName</li>
                        }
                    </ul>
                </div>
            </div>
        </div>
    </div>

    <!-- Cultural -->
    <div class="row mb-5">
        <div class="col-12">
            <div class="cultural">
                <div class="section-title">Ý nghĩa văn hóa</div>
                <div class="text-muted">
                    Có ý nghĩa quan trọng trong văn hóa Việt Nam, thường được trồng trong các khu vườn truyền thống.
                </div>
            </div>
        </div>
    </div>
</div>
