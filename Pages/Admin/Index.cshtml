@page
@model IndexModel
@{
    ViewData["Title"] = "Plants - Admin";
}
<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8" />
    <style>
        @* .admin-container body {
            background-color: #f9f9f9;
        }

        .admin-container .title {
            color: #2c3e50;
            font-size: 24px;
            margin-bottom: 16px;
        }

        .admin-container .btn {
            padding: 8px 16px;
            background: #3498db;
            color: #fff;
            border: none;
            border-radius: 4px;
        }

        .admin-container {
            display: flex;
            justify-content: center;
            align-items: center;
            flex-direction: column;
        } *@
    </style>
</head>

<body>
    <h2>Danh sách cây trồng</h2>
    <p>Tổng cộng: @Model.Plants.TotalItems cây</p>

    <form method="get" class="row mb-3">
        <div class="col-md-4">
            <input type="text" name="Search" value="@Model.FilterVM.Keyword" class="form-control" placeholder="Tìm kiếm theo tên">
        </div>
        <div class="col-md-4">
            <select name="CategoryFilter" class="form-select">
                <option value="">-- Tất cả category --</option>
                @* <option value="Cây gỗ" selected="@(Model.FilterVM.CategoryId == "Cây gỗ")">Cây gỗ</option>
                <option value="Hoa" selected="@(Model.CategoryFilter == "Hoa")">Hoa</option>
                <option value="Cây ăn quả" selected="@(Model.CategoryFilter == "Cây ăn quả")">Cây ăn quả</option> *@
            </select>
        </div>
        <div class="col-md-4">
            <button type="submit" class="btn btn-primary">Tìm kiếm</button>
        </div>
    </form>

    <div class="row">
        @foreach (var plant in Model.Plants.Items)
        {
            <div class="col-md-4 mb-4">
                <div class="card h-100">
                    <img src="@plant.CommonName" class="card-img-top" alt="@plant.CommonName">
                    <div class="card-body">
                        <h5 class="card-title">@plant.CommonName</h5>
                        <small class="text-muted">@plant.CommonName</small>
                        <p class="card-text mt-2">@plant.Description</p>
                        <span class="badge bg-success">@plant.CommonName</span>
                    </div>
                    <div class="card-footer">
                        <a class="btn btn-outline-primary btn-sm" href="#">Sửa</a>
                        <a class="btn btn-outline-danger btn-sm" href="#">Xóa</a>
                    </div>
                </div>
            </div>
        }
    </div>

    <nav>
        <ul class="pagination">
            @for (int i = 1; i <= Model.TotalPages; i++)
            {
                <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                    <a class="page-link"
                        href="?CurrentPage=@i&Keyword=@Model.FilterVM.Keyword&CategoryId=@Model.FilterVM.CategoryId">@i</a>
                </li>
            }
        </ul>
    </nav>
</body>