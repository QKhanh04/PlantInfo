@page "{id:int}"
@model PersonalInfoModel
@{
    ViewData["Title"] = "Cập nhật thông tin người dùng";
}

<h2 class="mb-4">@ViewData["Title"]</h2>

<form method="post">
    <input type="hidden" asp-for="UserDTO.UserId" />

    <div class="form-group mb-3">
        <label class="form-label">Tên đăng nhập</label>
        <input class="form-control" value="@Model.UserName" readonly />
    </div>

    <div class="form-group mb-3">
        <label asp-for="UserDTO.Email" class="form-label"></label>
        <input asp-for="UserDTO.Email" class="form-control" />
        <span asp-validation-for="UserDTO.Email" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="UserDTO.Password" class="form-label">Mật khẩu mới (nếu muốn đổi)</label>
        <input asp-for="UserDTO.Password" class="form-control" type="password" />
        <span asp-validation-for="UserDTO.Password" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Lưu thay đổi</button>
    <a asp-page="/Index" class="btn btn-secondary">Quay lại</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
